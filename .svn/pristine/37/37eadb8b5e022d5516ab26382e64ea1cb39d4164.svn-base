@charset "utf-8";

/* --------------------------------------------------------------------------
   重置
   -------------------------------------------------------------------------- */
body {
   font: 14px/1.5 tahoma, arial, Hiragino Sans GB, WenQuanYi Micro Hei, \5FAE\8F6F\96C5\9ED1, \5B8B\4F53, sans-serif;
   line-height: 1.5;
   min-width: 1200px;
   overflow-x: auto;
   min-height: 1000px;
}
body, blockquote, dl, dd, figure, form, fieldset, p, pre, h1, h2, h3, h4, h5, h6, input {
   margin: 0;
}
menu, ul, ol {
   list-style-type: none;
   margin: 0;
   padding-left: 0;
}
html {
   box-sizing: border-box;
}
*, *:before, *:after {
   box-sizing: inherit;
}
a {
   color: #141414;
   text-decoration: none;
   cursor: pointer;
}
a:hover, ins {
   text-decoration: none;
}
h1, h2, h3, h4, h5, h6 {
   font-weight: normal;
}
img {
   vertical-align: top;
   display: block;
   width: 100%;
   height: 100%;
}
.text-center {
   text-align: center;
}
.pw {
   width: 1812px;
   margin: 54px auto;
}
.text {
   overflow: hidden;
   text-overflow: ellipsis;
   -o-text-overflow: ellipsis;
   white-space: nowrap;
   display: block;
}
.text-muted {
   color: #747474;
}
.fix:before, .fix:after {
   content: " ";
   display: table;
}
.fix:after {
   clear: both;
}
.center-block {
   display: block;
   margin-left: auto;
   margin-right: auto;
}
.pull-right {
   float: right !important;
}
.pull-left {
   float: left !important;
}
figure {
   margin: 0;
}
.hide {
   display: none !important;
}
.show {
   display: block !important;
}
.invisible {
   visibility: visible;
}
.hidden {
   display: none !important;
}
.dn {
   display: none;
}
.db {
   display: block;
}
.bor-t-text {
   border-top: 2px solid #000;
}
.middle {
   vertical-align: middle;
}
li {
   position: relative;
}
.inline {
   display: inline-block;
}
.affix {
   position: fixed !important;
}
.po_ab {
   position: absolute !important;
}
.po_re {
   position: relative !important;
}
.z1 {
   z-index: 1 !important;
}
.text-left {
   text-align: left !important;
}
.text-right {
   text-align: right !important;
}
.text-center {
   text-align: center !important;
}
.text-justify {
   text-align: justify !important;
}
.text-nowrap {
   white-space: nowrap !important;
}

/* --------------------------------------------------------------------------
   格局
   -------------------------------------------------------------------------- */
.colorf {
   color: #fff;
}
.colorb {
   color: #000;
}
.bg-c1 {
   background-color: #5b76ad;
}
.color-main, .color-main a {
   color: #ff3355;
}
button[disabled] {
   opacity: .65;
   cursor: not-allowed;
   background: #eee;
}
button, input, .btn, textarea {
   outline: 0;
   box-shadow: none;
   cursor: pointer;
   font-family: tahoma, arial, "Hiragino Sans GB", "WenQuanYi Micro Hei", 微软雅黑, 宋体, sans-serif;
}
button {
   border: none;
}
.btn-main {
   outline: 0;
   color: #fff;
   background: #ff3355;
   border: 1px solid #ff3355;
}
.btn-cancel {
   color: #333;
   background: #fff;
   border: 1px solid #ccc;
}
.btn-main:focus, button.btn-main:hover {
   opcity: 0.9;
   color: #fff;
}
.margin {
   margin: 5px 0;
}
#main {
   width: 1200px;
   margin: 30px auto;
}
.m_l_10 {
   margin-left: 10px;
}
.m_l_30 {
   margin-left: 30px;
}
.m_r_10 {
   margin-right: 10px;
}
.m_t_5 {
   margin-top: 5px;
}
.m_b_50 {
   margin-bottom: 50px;
}
.m_b_10 {
   margin-bottom: 10px;
}
.p_l_5 {
   padding-left: 5px;
}
.c-main-left, .c-main-right {
   width: 335px;
}
.c-main-left li {
   width: 335px;
   height: 218px;
   background-color: #ccc;
   text-align: center;
   position: relative;
}
.center-txt {
   bottom: 0;
   text-align: center;
   width: 100%;
   position: absolute;
}
.center-txt span {
   padding: 5px 20px;
   background-color: rgba(0, 0, 0, 0.35);
   color: #fff;
   font-size: 26px;
   display: inline-block;
   width: 100%;
   left: 38%;

}
.c-main-left li+li {
   margin-top: 10px;
}
.c-main-left li:nth-child(2) {
   height: 240px;
}
.c-main-left li:nth-child(3) {
   height: 296px;
}
.c-main-left li:nth-child(4) {
   height: 296px;
}

